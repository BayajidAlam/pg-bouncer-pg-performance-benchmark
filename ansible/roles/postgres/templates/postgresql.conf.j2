# PostgreSQL Configuration File
# Managed by Ansible

# Connection Settings
listen_addresses = '*'  # Accept connections from all IPs
max_connections = {{ postgresql_max_connections | default(100) }}  # Maximum concurrent connections

# Authentication
password_encryption = md5  # Use MD5 for PgBouncer compatibility (PgBouncer doesn't support SCRAM-SHA-256)

# Memory Settings
shared_buffers = 128MB
effective_cache_size = 512MB

# Write Ahead Log
wal_level = replica
max_wal_senders = 3

# Logging
log_destination = 'stderr'
logging_collector = on
log_directory = 'log'
log_filename = 'postgresql-%Y-%m-%d_%H%M%S.log'
log_line_prefix = '%m [%p] %u@%d '

# Statistics
track_activities = on
track_counts = on
track_io_timing = on
track_functions = all
